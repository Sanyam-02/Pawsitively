<% layout('layouts/boilerplate') %>
    <div class="shadow-lg p-2 bg-body rounded">
        <h2 class="fs-2 fw-bold mx-auto my-3 p-1">Pet Care Provider Registration</h2>
        <form action="/RegisterCaretaker" class="mb-5" method="post">
            <div class="row mb-3">
                <div class="col-md-6">
                    <input type="text" class="form-control col-md-4" id="inlineFormInputGroup" placeholder="Username"
                        name="username" required>
                </div>
                <div class="form-group col-md-6">
                    <input type="password" class="form-control" id="inputPassword4" placeholder="Password"
                        name="password" required>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-6">
                    <input type="text" class="form-control col-md-4" id="CareName" placeholder="Name" name="orgName"
                        required>
                </div>
                <div class="form-group col-md-6">
                    <input type="text" class="form-control" id="CareMail" placeholder="Mail" name="orgMail" required>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-6">
                    <input type="number" class="form-control" id="inputPhone" placeholder="Phone Number"
                        name="phoneNumber" required>
                </div>
                <div class="form-group col-md-6">
                    <input type="text" class="form-control" id="inputDesignation" placeholder="Designation"
                        name="designation" required>
                </div>
            </div>
            
            <div class="form-group mb-3">
                <label class="form-label">About</label>
                <textarea class="form-control" id="inputAbout" placeholder="About" name="about" rows="5"
                    required></textarea>
            </div>
            <div class="row mb-3">
                <div class="form-group col-md-12">
                    <label for="inputAddress">Address</label>
                    <input type="text" class="form-control" id="inputAddress" placeholder="Main Street 123" name="add1"
                        required>
                </div>
            </div>
            <div class="row mb-3">
                <div class="form-group col-md-6">
                    <label for="inputCity">City</label>
                    <input type="text" class="form-control" id="inputCity" name="city" placeholder="Indore" required>
                </div>
                <div class="form-group col-md-4">
                    <label for="inputState">State</label>
                    <input type="text" class="form-control" id="inputState" name="state" placeholder="Madhya Pradesh"
                        required>
                </div>
                <div class="form-group col-md-2">
                    <label for="inputZip">Zip</label>
                    <input type="text" class="form-control" id="inputZip" name="zipCode" placeholder="452001" required>
                </div>
            </div>

            <button type="submit" class="btn btn-success btn-md col-md-12">Register</button>
        </form>
    </div>