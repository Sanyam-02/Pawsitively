<% layout('layouts/boilerplate') %>
<div class="shadow-lg p-3 mb-3 bg-body rounded">
	<h2 class="fs-2 fw-bold mx-auto my-3 p-1">Add Service</h2>
	<div id="booking" class="section">
		<div class="section-center">
			<div class="container">
				<div class="row">
					<div class="booking-form">
						<form action="/AddService" method="post">
							<div class="row">
								<div class="col-sm-6">
									<div class="form-group">
										<span class="form-label">Service Name</span>
										<input class="form-control" type="text" placeholder="Enter Service" name="EName">
									</div>
								</div>
								<div class="col-sm-6">
									<div class="form-group">
										<span class="form-label">Charging Fee</span>
										<input class="form-control" type="price" placeholder="Enter your Fee on Hourly Basis" name="ChargingFee" required>
									</div>
								</div>
							</div>
							<div class="form-group">
								<span class="form-label">Service Description</span>
								<textarea class="form-control"  placeholder="Enter about your Service" name="servicedescription" rows="5" required ></textarea>
							</div>
							<div class="form-group">
								<span class="form-label">Enter Experience</span>
								<textarea class="form-control"  placeholder="Enter about your Experience" name="Experiencedescription" rows="5" required ></textarea>
							</div>
							
							<div class="row mb-3">
								<div class="col-sm-5">
								</div>
								<div class="col-sm-7">
									<div class="row">
										
									</div>
								</div>
							</div>
							<div class="form-btn">
								<button type="submit" class="btn btn-success btn-md col-md-12">Submit</button>
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
