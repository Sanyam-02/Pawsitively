<% layout('layouts/boilerplate') %>
    <div class="container-xxl bg-white p-0">
        <div class="container-xxl py-5 bg-dark page-header mb-5">
            <div class="container my-5 pt-5 pb-4">
                <h1 class="display-3 text-white mb-3 animated slideInDown">Service Detail</h1>
            </div>
        </div>

        <div class="container-xxl py-5 wow fadeInUp" data-wow-delay="0.1s">
            <div class="container">
                <div class="row gy-5 gx-4">
                    <div class="col-lg-6">
                        <div class="d-flex align-items-center mb-5">
                            <!-- <img class="flex-shrink-0 img-fluid border rounded" src="img/com-logo-2.jpg" alt="" style="width: 80px; height: 80px;"> -->
                            <div class="text-start ps-4">
                                <h3 class="mb-3">
                                    <%= dt1.serviceName %>
                                </h3>
                                <span class="text-truncate me-3"><i class="fa fa-fish text-primary me-2"></i></i>Type of
                                    Pet: <%= dt1.pet_type%></span>
                                <span class="text-truncate me-0"><i
                                        class="far fa-money-bill-alt text-primary me-2"></i>â‚¹ <%= dt1.Fee %></span>
                            </div>
                        </div>

                        <div class="mb-5">
                            <h4 class="mb-3">Service description</h4>
                            <p>
                                <%= dt1.serviceDescription %>
                            </p>
                            <h4 class="mb-3">Anything noteworthy</h4>
                            <p>
                                <%= dt1.noteworthy %>
                            </p>


                        </div>

                    </div>

                    <div class="col-lg-6">
                        <div class="wow fadeIn" data-wow-delay="0.1s">
                            <div class="row g-0 about-bg rounded overflow-hidden">
                                <div class="col-6 text-start">
                                    <img class="img-fluid w-150" src="/img/about-1.jpg">
                                </div>
                                <div class="col-6 text-start">
                                    <img class="img-fluid" src="/img/about-2.jpg" style="width: 120%; height: 100; ">
                                </div>
                                <div class="col-6 text-end">
                                    <img class="img-fluid" src="/img/about-3.jpg" style="width: 120%;">
                                </div>
                                <div class="col-6 text-end">
                                    <img class="img-fluid w-100" src="/img/about-4.jpg">
                                </div>
                            </div>
                        </div>
                    </div>

                    <% if (currentUser.usertype=="owner" ) {%>
                        <div class="">
                            <h4 class="mb-3">Schedule a Service</h4>
                            <form>
                                <div class="row p-2 bg-body rounded">
                                    <div class="col-sm-4">
                                        <div class="form-group">
                                            <span class="form-label">Name</span>
                                            <input class="form-control" type="text" placeholder="Enter your name">
                                        </div>
                                    </div>
                                    <div class="col-sm-4">
                                        <div class="form-group">
                                            <span class="form-label">Email</span>
                                            <input class="form-control" type="email" placeholder="Enter your email"
                                                name="email" required>
                                        </div>
                                    </div>

                                    <div class="col-sm-4">
                                        <div class="form-group">
                                            <span class="form-label">Phone</span>
                                            <input class="form-control" type="tel" placeholder="Enter your phone number"
                                                name="phoneNumber" required>
                                        </div>
                                    </div>
                                </div>
                                <div class="row p-2 bg-body rounded">
                                    <div class="form-group">
                                        <span class="form-label">Enter Address</span>
                                        <input class="form-control" type="text" placeholder="Enter your Address"
                                            name="Address" required>
                                    </div>
                                </div>
                                <div class="row mb-3 p-2 bg-body rounded">
                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            <span class="form-label">Service Date</span>
                                            <input class="form-control" type="date" required>
                                        </div>
                                    </div>
                                    <div class="col-sm-6">
                                        <div class="row">
                                            <div class="form-group">
                                                <span class="form-label">Service Time</span>
                                                <select id="Category" class="form-select" name="time" required>
                                                    <option value="" disabled selected>Service Time</option>
                            
                                                    <option>9:00-10:00  AM</option>
                                                    <option>10:00-11:00 AM</option>
                                                    <option>11:00-12:00 AM</option>
                                                    <option>12:00-1:00  PM</option>
                                                    <option>1:00-2:00   PM</option>
                                                    <option>2:00-3:00   PM</option>
                                                    <option>3:00-4:00   PM</option>
                                                    <option>4:00-5:00   PM</option>
                                                    <option>5:00-6:00   PM</option>
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-btn">
                                    <button type="submit" href="/Confirmation"
                                        class="btn btn-success btn-md col-md-12">Submit</button>
                                </div>
                            </form>
                        </div>
                        <% } %>

                </div>
            </div>
        </div>
    </div>