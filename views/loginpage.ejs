<% layout('layouts/boilerplate') %> 
<div><p>   </p>
<p>    </p>
</div>

<div class="container justify-content-center align-items-center ">
    <div class="row">
        <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
            <div class="card shadow">
                <img src="https://webmobtechcdn.nyc3.cdn.digitaloceanspaces.com/wmt_v4/2021/07/Apps-for-maintaining-pet-health.jpg"                   
                 class="card-img-top" alt="">
                <div class="card-body">
                    <h3 class="card-title text-center ">Pawsitively Login</h3>
                    <form action="/login" method="post" class="validated-form" novalidate>
                        <div class="mb-3">
                            <label class="form-label" for="username">Username</label>
                            <input class="form-control" type="text" id="username" placeholder="Enter Username"
                                autofocus name="username" required>
                            <div class="valid-feedback">
                                Looks Good!!
                            </div>
                            <div class="invalid-feedback">
                                Username Required
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="password">Password</label>
                            <input class="form-control" type="password" id="password" placeholder="Enter Password"
                                name="password" required>
                            <div class="valid-feedback">
                                Looks Good!!
                            </div>
                            <div class="invalid-feedback">
                                Password Required
                            </div>
                        </div>
                        <div class="d-grid">
                            <button class="btn btn-success btn-block">Login</button>
                        </div>
                        <div><p>   </p></div>
                        <div class="text-center">
                            <p>Don't have an account? <a href="/register">Sign up</a></p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
