<% layout('layouts/boilerplate') %>
<div class="container justify-content-center align-items-center my-5">
    <div class="row">
        <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
            <div class="card shadow">
                <img src="https://webmobtechcdn.nyc3.cdn.digitaloceanspaces.com/wmt_v4/2021/07/Apps-for-maintaining-pet-health.jpg" 
                    class="card-img-top" alt="">
                <div class="card-body">
                    <h5 class="card-title text-start my-2">Register</h5>
                    <form action="/register" method="post" class="validated-form my-3" novalidate>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="typeOfUser" id="ngoSelectRadio" value="careprovider">
                            <label class="form-check-label" for="ngoSelectRadio">Pet Care Taker</label>
                        </div>
                        <div class="form-check form-check-inline mb-3">
                            <input class="form-check-input" type="radio" name="typeOfUser" id="userSelectRadio" value="pet" checked>
                            <label class="form-check-label" for="userSelectRadio">Pet Owner</label>
                        </div>
                        
                        <div class="d-grid">
                            <button class="btn btn-success my-3">Next</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
