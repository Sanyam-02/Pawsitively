<% layout('layouts/boilerplate') %>

    <head>
        <style>
            .gradient-custom {
                background: linear-gradient(to right bottom, rgb(179, 250, 189), rgb(127, 177, 229));
            }
        </style>
    </head>
    <section class="" style="background-color: #f4f5f7;">
        <div class="container py-5">
            <div class="row">
                <div class="col-lg-6 offset-lg-1 mt-4">
